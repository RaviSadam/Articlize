<!--
    List of articles
                    -title
                    -id
                    -status
        totalPages
        currentPage
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>My Articles</title>
    <link rel="stylesheet" href="/css/articles-list.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#8be6dd">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item list">
                        <a class="nav-link list-item" aria-current="/app/home" href="/home">Home</a>
                    </li>
                    <!-- Display these items only if the user name is not null -->
                    <li class="nav-item list" >
                        <a class="nav-link list-item" href="/blog/pending-write">Pick Article</a>
                    </li>
                    <li class="nav-item list" >
                        <a class="nav-link list-item" href="/blog/pending-review">Review Article</a>
                    </li>
                    <li class="nav-item list">
                        <a class="nav-link list-item" href="/blog/posts">My Articles</a>
                    </li>
                    <li class="nav-item list">
                        <a class="nav-link list-item" href="/user/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h2>Article List</h2>
        <% articles.forEach(article=>{ %>
            <div>
                <div class="row mb-3">
                    <div class="col-md-8">
                        <!-- PICK,WRITING,REVIEW,COMPLETED -->
                        <p class="h4" style="display: inline-block;"><%=article.title%></p>
                        <% if(article.status==1){ %>
                            <span class="badge badge-pill badge-danger">WRITING</span>
                        <% } else if(article.status==2){ %>
                            <span class="badge badge-pill badge-primary">REVIEW</span>
                        <% }else{ %>
                            <span class="badge badge-pill badge-success">COMPLETED</span>
                        <% } %>
                    </div>
                    <% if(article.status==1){ %>
                        <div class="col-md-4">
                            <a class="btn btn-success" style="margin-top: 15px;" href="/blog/write/?blogId=<%=article._id%>">Write</a>
                        </div>
                    <% } else{ %>
                        <div class="col-md-4">
                            <a class="btn btn-success" style="margin-top: 15px;" href="/read/?blogId=<%=article._id%>">Read</a>
                        </div>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
    <!-- Pagination -->
    <ul class="pagination justify-content-center">
        
        <li class="page-item">
            <a class="page-link" href="<%(currentPage>1)?'/blog/posts/?pageNumber='+(currentPage-1):'#'%>">Previous</a>
        </li>
        <% for(let i=1;i<=totalPages;i++){ %>
            <li class="page-item">
                <a class="page-link" href="/blog/posts/?pageNumber=<%=i%>" class="<%(i===currentPage)?"active":"" %>"><%=i%></a>
            </li>
        <% } %>
        <li class="page-item">
            <a class="page-link" href="<%(currentPage<totalPages)?'/blog/posts/?pageNumber='+(currentPage+1):'#'%>">Next</a>
        </li>
        
        
    </ul>
    <script src="https://cdn.tiny.cloud/1/2f3dhstx598mffk9ghmmrhhg2v7v2ixeqzj3f45vefqivh7q/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>
